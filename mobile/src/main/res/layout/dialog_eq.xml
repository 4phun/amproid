<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eq_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppDialogTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_from_edge"
        android:layout_marginTop="@dimen/separation"
        android:layout_marginRight="@dimen/distance_from_edge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/eq_freq_size"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/loudness"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <SeekBar
            android:id="@+id/loudnessGain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="2400" />
    </LinearLayout>

</LinearLayout>